#========== START UP SCREEN ==========#
# THIS IS THE VERY FIRST SCREEN THAT THE
# USER WILL SEE AFTER STARTING THE 
# APPLICATION. THE SCREEN WELCOMES WILL
# BE WELCOMING THE USER WOULD HAVE THE 
# OPTION TO EITHER LOG IN OR SIGN UP.
<StartUpScreen>:
	FloatLayout:
		canvas.before:
			Rectangle:
				pos: self.pos
				size: self.size
				source: "resources/backgrounds/startup_background.jpg"
		ImageButton:
			id: S_login_BTN
			source: "resources/buttons/login.jpg"
			#background_color: 0, 0, 0, 0
			allow_stretch: True
			keep_ratio: False
			size_hint : 0.35, 0.05
			pos_hint : { "x" : 0.325 , "y" : 0.53 }
			on_release:
				app.root.current = "login_screen"
		ImageButton:
			id: S_signup_BTN
			source: "resources/buttons/signup.jpg"
			#background_color: 0, 0, 0, 0
			allow_stretch: True
			keep_ratio: False
			size_hint : 0.35, 0.05
			pos_hint : { "x" : 0.325 , "y" : 0.43 }
			on_release:
				app.root.current = "signup_screen"