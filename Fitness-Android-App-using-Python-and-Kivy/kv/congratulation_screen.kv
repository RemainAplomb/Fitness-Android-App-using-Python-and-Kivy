#========== CONGRATULATIONS SCREEN ==========#
# THIS IS THE SCREEN THAT CONGRATULATES THE USER
# FOR SUCCESSFULLY FINISHING HIS SELECTED WORKOUT.
<CongratulationScreen>:
	GridLayout:
		cols: 1
		FloatLayout:
			canvas.before:
				Rectangle:
					pos: self.pos
					size: self.size
					source: "resources/backgrounds/headline_background.jpg"
			size_hint: 1, 0.08
			FloatLayout:
				size_hint: 0.1, 1
				pos_hint: { "x" : 0 , "y" : 0 }
				canvas.before:
					Rectangle:
						size: self.size
						pos: self.pos
						source: "resources/buttons/navigation_bar.jpg"
				Button:
					id: sidemenu_BTN
					size_hint: 1, 1
					background_color: 0, 0, 0, 0
					pos_hint: { "x" : 0 , "y" : 0 }
					on_release:
						app.menu_dropdown.open(self)
			FloatLayout:
				size_hint: 0.3, 1
				pos_hint: { "x" : 0.13 , "y" : 0 }
				canvas.before:
					Rectangle:
						size: self.size
						pos: self.pos
						source: "resources/labels/home_fitness.jpg"	
		FloatLayout:
			canvas.before:
				Rectangle:
					pos: self.pos
					size: self.size
					source: "resources/backgrounds/report_background.jpg"	
			size_hint: 1, 0.90
			Image:
				id: congratulation_bk
				source: "resources/backgrounds/congratulations_bk.jpg"
				size_hint: 1, 1
				pos_hint: { "x" : 0, "y" : 0 }
				allow_stretch: True
				keep_ratio: False
				
			Image:
				id: workoutdone_img
				source: "resources/backgrounds/back_advance.jpg"
				size_hint: 0.4, 0.3
				pos_hint: { "x" : 0.3 , "y" : 0.33 }
				allow_stretch: True
				keep_ratio: False
				
			ImageButton:
				id: return_BTN
				source: "resources/buttons/return.jpg"
				size_hint: 1, 0.1
				allow_stretch: True
				keep_ratio: False
				size_hint: 0.4, 0.1
				pos_hint: { "x" : 0.3 , "y" : 0.2 }
				on_release:
					app.root.current = "main_screen"